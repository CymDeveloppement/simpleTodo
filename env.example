APP_NAME=SimpleTodo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack

# Database
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@simpletodo.local
MAIL_FROM_NAME="SimpleTodo"

# Pour utiliser Mailgun (recommandé)
# Créez un compte gratuit sur https://www.mailgun.com
# Puis ajoutez :
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=votre-domaine.mailgun.org
# MAILGUN_SECRET=votre-clé-secrète

# Pour utiliser SendGrid
# Créez un compte gratuit sur https://sendgrid.com
# Puis ajoutez :
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=votre-clé-api

# Pour utiliser Gmail SMTP
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=votre-email@gmail.com
# MAIL_PASSWORD=votre-mot-de-passe-app
# MAIL_ENCRYPTION=tls

