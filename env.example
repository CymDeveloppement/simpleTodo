APP_NAME=SimpleTodo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

CACHE_STORE=file
QUEUE_CONNECTION=sync

# Nom du service (utilisé dans l'objet des e-mails)
TODO_SERVICE_NAME="SimpleTodo"

# Dépôt GitHub à interroger pour les mises à jour
ADMIN_REPOSITORY=CymDeveloppement/simpleTodo

# Administrateur (a accès aux fonctions propriétaires)
ADMIN_EMAIL=

LOG_CHANNEL=stack

# Database
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@simpletodo.local
MAIL_FROM_NAME="SimpleTodo"

# Mistral AI
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-small-latest

# Pour utiliser Mailgun (recommandé)
# Créez un compte gratuit sur https://www.mailgun.com
# Puis ajoutez :
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=votre-domaine.mailgun.org
